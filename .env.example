# ============================================
# OneFlow.AI - Конфигурация (Environment Variables)
# ============================================
# ВАЖНО: Скопируйте этот файл в .env и заполните реальными значениями
# НИКОГДА не коммитьте .env файл в git!

# ============================================
# API Keys для AI провайдеров
# ============================================
# OpenAI (GPT, DALL-E)
OPENAI_API_KEY=sk-proj-your-openai-key-here

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Stability AI (Image Generation)
STABILITY_API_KEY=sk-your-stability-key-here

# ElevenLabs (Voice Generation)
ELEVENLABS_API_KEY=your-elevenlabs-key-here

# ============================================
# Database Configuration
# ============================================
# SQLite (по умолчанию для разработки)
DATABASE_URL=sqlite:///oneflow.db

# PostgreSQL (рекомендуется для продакшена)
# DATABASE_URL=postgresql://user:password@localhost:5432/oneflow

# MySQL
# DATABASE_URL=mysql://user:password@localhost:3306/oneflow

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=8000
DEBUG=False
LOG_LEVEL=INFO

# ============================================
# Security Configuration
# ============================================
# JWT секретный ключ (используйте: python -c "import secrets; print(secrets.token_urlsafe(32))")
JWT_SECRET_KEY=your-secret-key-here-change-this-in-production

# JWT алгоритм
JWT_ALGORITHM=HS256

# Время жизни access токена (в минутах)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# AWS Secrets Manager (опционально)
# ============================================
# Раскомментируйте для использования AWS Secrets Manager
# AWS_SECRET_NAME=oneflow-ai/api-keys
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# ============================================
# HashiCorp Vault (опционально)
# ============================================
# Раскомментируйте для использования Vault
# VAULT_ADDR=https://vault.example.com:8200
# VAULT_TOKEN=your-vault-token
# VAULT_SECRET_PATH=secret/oneflow-ai/api-keys

# ============================================
# Google Cloud Secret Manager (опционально)
# ============================================
# Раскомментируйте для использования GCP Secret Manager
# GCP_PROJECT_ID=your-project-id
# GCP_OPENAI_SECRET_ID=openai-api-key
# GCP_ANTHROPIC_SECRET_ID=anthropic-api-key
# GCP_STABILITY_SECRET_ID=stability-api-key
# GCP_ELEVENLABS_SECRET_ID=elevenlabs-api-key
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ============================================
# Azure Key Vault (опционально)
# ============================================
# Раскомментируйте для использования Azure Key Vault
# AZURE_VAULT_URL=https://your-vault.vault.azure.net/
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret

# ============================================
# Kubernetes Secrets (опционально)
# ============================================
# Путь к смонтированным секретам (по умолчанию /run/secrets)
# K8S_SECRET_PATH=/run/secrets

# ============================================
# Application Settings
# ============================================
# Максимальный размер бюджета
MAX_DAILY_BUDGET=1000
MAX_WEEKLY_BUDGET=5000
MAX_MONTHLY_BUDGET=20000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# Monitoring & Logging (опционально)
# ============================================
# Sentry DSN для мониторинга ошибок
# SENTRY_DSN=https://your-sentry-dsn

# Datadog API ключ для метрик
# DATADOG_API_KEY=your-datadog-key

# ============================================
# CORS Settings (для Web API)
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# ============================================
# Feature Flags
# ============================================
ENABLE_ANALYTICS=true
ENABLE_BUDGET_ENFORCEMENT=true
ENABLE_RATE_LIMITING=true
