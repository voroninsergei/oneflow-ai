# ===== OneFlow.AI - Production Configuration =====
# Путь: .env.production (корень проекта, используйте для продакшена)

# Application
ENVIRONMENT=production
LOG_LEVEL=WARNING
APP_PORT=8000

# Database
DATABASE_URL=postgresql://oneflow:STRONG_PASSWORD_HERE@postgres:5432/oneflow

# Redis
REDIS_URL=redis://:STRONG_PASSWORD_HERE@redis:6379/0

# Security
JWT_SECRET=GENERATE_STRONG_RANDOM_SECRET_HERE_USE_openssl_rand_hex_32
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Features
ENABLE_METRICS=true
ENABLE_TRACING=true

# API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=...
